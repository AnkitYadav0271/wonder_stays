<% layout('templates/boilerplate') -%>

    <body>
        
       

            <h3>All Listings</h3>


            <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
                <% for( let list of allListings ) { %>

                    <a href="/listings/<%= list._id %>" class="listing-link">
                        <div class="card col" style="width: 20rem;">
                            <img src="<%= list.image %>" class="card-img-top" alt="listing image"
                                style="height: 20rem ;">
                            <div class="card-img-overlay">
                                <p>
                                    <%= list.description %>
                                </p>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    <%= list.title %>
                                </p>
                                <p class="card-text">&#8377;
                                    <%= list.price.toLocaleString("en-IN") %>
                                </p>
                            </div>
                        </div>
                    </a>

                    <% } %>
            </div>



    </body>