<% layout('templates/boilerplate') -%>

    <body class="bg-light">

        <div class="container mt-5 mb-5 d-flex justify-content-center">
            <div class="card shadow-sm p-4" style="width: 80%;">
                <div class="mb-3">
                    <h3 class="card-title fw-bold mb-3">
                        <%= getListing.title %>
                    </h3>
                </div>
                <!-- Listing Image -->
                <img src="<%= getListing.image %>" class="card-img-top mb-4 rounded show-img"
                    alt="<%= getListing.title %>">

                <div class="card-body">
                    <!-- Title -->


                    <!-- Description -->
                    <p class="card-text mb-4">
                        <%= getListing.description %>
                    </p>

                    <!-- Details Table -->
                    <div class="mb-3">

                        <div class="row mb-2">
                            <div class="col-sm-3 fw-semibold">Owner:</div>
                            <div class="col-sm-9">
                                <%= getListing.user.username %>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3 fw-semibold">Location:</div>
                            <div class="col-sm-9">
                                <%= getListing.location %>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3 fw-semibold">Country:</div>
                            <div class="col-sm-9">
                                <%= getListing.country %>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-sm-3 fw-semibold">Price:</div>
                            <div class="col-sm-9 text-success fw-bold">â‚¹<%= getListing.price %>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <% if (currUser && currUser._id.equals(getListing.user._id)){ %>
                        <div class="d-flex gap-2 mt-4 edit-btn ">
                            <a href="/listings/<%= getListing._id %>/edit" class="btn btn-warning ">Edit</a>
                            <form action="/listings/<%= getListing._id %>/destroy?_method=DELETE" method="POST"
                                class="flex-fill">
                                <button class="btn btn-danger add-btn">Delete</button>
                            </form>
                        </div>
                        <% } %>

                            <!-- Review Section  -->
                            <hr>
                            <div class="mt-4 offset mb-3">
                                <h4>Leave a review</h4>
                                <form action="/listings/<%= getListing._id %>/reviews" method="POST" novalidate
                                    class="needs-validation">
                                    <div class="mb-3 mt-3">
                                        <label for="rating" class="form-label">Rating</label>
                                        <input type="range" ,id="rating" , min="1" max="5" name="review[rating]">
                                    </div>
                                    <div class="mb-3 mt-3">
                                        <label for="comment" class="form-label">comment</label>
                                        <textarea name="review[comment] " id="comment" cols="30" rows="5" required
                                            class="form-control"></textarea>
                                        <!--* submit button  -->
                                    </div mt-4>
                                    <button class="btn btn-outline-dark">Submit</button>
                                </form>
                            </div>
                            <!--* Showing all the reviews  -->
                            <hr>
                            <h4>All reviews</h4>
                            <div class="row">
                                <% for (review of getListing.reviews) { %>
                                    <div class="card col-6 gap-2">

                                        <div class="card-body">
                                            <h5 class="card-title">Ankit</h5>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>
                                            <p class="card-text">
                                                <%= review.rating %> stars
                                            </p>
                                        </div>
                                        <form
                                            action="/listings/<%= getListing._id %>/review/<%=review._id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-danger">Delete</button>
                                        </form>

                                    </div>
                                    <% } %>
                            </div>
                </div>
            </div>
        </div>

    </body>